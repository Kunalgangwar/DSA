class Solution {
  public:
    void printTriangle(int n) {
        int k=1;
        int j=1;
        int i=1;
        for(i=1;i<n+1;i++){
            while(j<=i){
                cout<<k<<" ";
                j++;
            }
            
            k++;
            j=1;
            cout<<endl;
        }
    }
};
